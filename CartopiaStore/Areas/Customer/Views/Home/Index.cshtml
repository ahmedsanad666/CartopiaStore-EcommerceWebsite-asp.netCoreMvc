@model CartopiaStore.Models.ViewModel;
@{
   
    ViewData["Title"] = "Home";
}

 <section class=" container py-4 Home">

  @* ....... start services sectoin *@

        <div class="row services">
            <div class="col-12 col-md-4">
              <div class="d-flex  gap-3">
                <div class=" d-flex justify-content-center align-content-center " ><i class="fa-solid d-flex justify-content-center align-items-center  fa-truck-fast fa-3x "></i></div>
                  <div class="flex-grow-1 ">
                      <h3>FREE SHIPPING</h3>
                      <p class=" text-break px-2 w-75">Free Shipping in all US order or order above 100$</p>
                  </div>
              </div>
            </div>  <div class="col-12 col-md-4">
              <div class="d-flex  gap-3  ">
                <div class=" d-flex justify-content-center align-content-center "><i class="fa-solid fa-box-open  d-flex justify-content-center align-items-center  fa-3x"></i></div>
                  <div class="flex-grow-1 ">
                      <h3>30 Days Return</h3>
                    <p class="w-75 text-break px-2">Simply Return it within 30 Days for an exchange </p>
                  </div>
              </div>
            </div>  <div class="col-12 col-md-4">
              <div class="d-flex  gap-3 ">
                <div class=" d-flex justify-content-center align-content-center "><i class="fa-regular fa-money-bill-1   d-flex justify-content-center align-items-center  fa-3x"></i></div>
                  <div class="flex-grow-1 ">
                      <h3>Secure Payment</h3>
                    <p class="w-75 text-break px-2">Simply Return it within 30 Days for an exchange </p>
                  </div>
              </div>
            </div> 
           
           
        </div>
    
  @* ....... end services sectoin *@

  @* start serch trending section*@
  <div class="container searchTreadingSec my-4 ">
      <div>
            <div class=" d-flex  gap-5">
                <h3 class="d-none d-lg-block my-4">Search Trending </h3>
                      
             
                        <div class="searchTreading d-flex justify-content-between flex-grow-1 align-items-center  flex-wrap gap-3"> 
                    @foreach (var category in Model.Categories.Categories)
                    {

                        <div class="">
                            
                            <a href="javascript:void(0);" class="category-link" data-category="@category">@category</a>
                        </div>
                        <div class="category-products " data-category-products="@category">
                         
                        </div>
                
                    }

                        </div>

                       
          </div>
      </div>
  </div>
  <hr />



  @* end search trending section*@
  <div class="clear"></div>
  @* start products section*@
    <div class="exploreProducts py-4 ">
        
     <h1 class="text-center fs-2   my-5">Explore Products</h1>
           <div class="row ">

            @foreach(var product in Model.Products)
            {
                
            <div class="col-lg-4 col-md-6 col p-2 ">
                <div class="card m-auto" style="width: 16rem;">
                    <a asp-area="" asp-controller="Home" asp-action="privacy" >

                    <img src="@product.thumbnail" class="card-img-top" alt="...">
                    </a>

                    <div class="card-body lh-lg ">
                        <h5 class="card-title">@product.title</h5>
                            <div class=" d-flex align-items-center gap-3">   <i class="fa-solid fa-star"></i>  <span class=" fw-bold ">@product.rating</span></div>
                            <div> <span>Brand :</span>  @product.brand</div>
                   <div class="d-flex justify-content-between align-items-center">
                                <div> <span>Price : </span> @product.priceAfterDiscount $</div>
                                <div class="text-decoration-line-through">@product.price$</div>
                            </div>
                        
                        </div>
                  
                </div>
            </div>
            }
            
        
            
           </div>
           <div class=" text-center my-4 py-4">
           <a class="border btn btn-success  px-5 py-1 text-decoration-none" asp-area="Customer" asp-controller="Product" asp-action="Index" >All Products</a>    
           </div>
        </div>
  @* end products section.*@















 </section>
 






