@model CartopiaStore.Models.ProductClass
@{
    ViewData["Title"] = "Products";
}

<section class=" ProductsPage min-vh-100 py-5">

   

    @* start products section*@
    <div class="exploreProducts py-4 ">

        <h1 class="text-center fs-2   my-5"> Products</h1>
        <div class="row ">

            @foreach (var product in Model.Products)
            {

                <div class="col-lg-4 col-md-6 col p-2 ">
                    <div class="card m-auto" style="width: 16rem;">
                        <a asp-area="Customer" asp-controller="Product" asp-action="SingleProduct" asp-route-id="@product.id">

                            <img src="@product.thumbnail" class="card-img-top" alt="...">
                        </a>

                        <div class="card-body lh-lg ">
                            <h5 class="card-title">@product.title</h5>
                            <div class=" d-flex align-items-center gap-3">   <i class="fa-solid fa-star"></i>  <span class=" fw-bold ">@product.rating</span></div>
                            <div> <span>Brand :</span>  @product.brand</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class=" text-break"> <span>Price : </span> @product.priceAfterDiscount $</div>
                                <div class="text-decoration-line-through">@product.price$</div>
                            </div>

                        </div>

                    </div>
                </div>
            }



        </div>

    </div>
    @* end products section.*@



</section>

<script>

</script>