 @model CartopiaStore.Models.ViewModel;
@{
    ViewData["Title"] = "All Products";
}

<section class=" ProductsPage min-vh-100 py-5">

    <div class="d-flex align-items-center justify-content-center  ">

        <div class="input-group w-50">
            <div class="form-outline">
                <input type="search" placeholder="Product Name" id="form1" class="form-control" />
              
            </div>
            <button type="button" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
    </div>
  
    </div>

    <div class="container my-5">
        <div class="category-scroll d-flex align-items-center justify-content-center">
            <button id="scroll-left" class="scroll-button"><i class="fa-solid fa-chevron-left"></i></button>
        <div class="category-container">

                <div class="category-list border rounded py-2">

            @foreach(var category in Model.Categories.Categories)
            {
                
            <span class="py-1 px-4">@category</span>
            }
            </div>
        </div>
            <button id="scroll-right" class="scroll-button"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
    </div>

    @* start products section*@
    <div class="exploreProducts py-4 ">

        <h1 class="text-center fs-2   my-5">All Products</h1>
        <div class="row ">

            @foreach (var product in Model.Products)
            {

                <div class="col-lg-4 col-md-6 col p-2 ">
                    <div class="card m-auto" style="width: 16rem;">
                        <a asp-area="Customer" asp-controller="Product" asp-action="SingleProduct" asp-route-id="@product.id">

                            <img src="@product.thumbnail" class="card-img-top" alt="...">
                        </a>

                        <div class="card-body lh-lg ">
                            <h5 class="card-title">@product.title</h5>
                            <div class=" d-flex align-items-center gap-3">   <i class="fa-solid fa-star"></i>  <span class=" fw-bold ">@product.rating</span></div>
                            <div> <span>Brand :</span>  @product.brand</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class=" text-break"> <span >Price : </span> @product.priceAfterDiscount $</div>
                                <div class="text-decoration-line-through">@product.price$</div>
                            </div>

                        </div>

                    </div>
                </div>
            }



        </div>
      
    </div>
    @* end products section.*@



</section>

